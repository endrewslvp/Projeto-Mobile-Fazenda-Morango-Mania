<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Mensagem de agradecimento -->
    <TextView
        android:id="@+id/textViewAgradecimentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Muito obrigado pela preferência!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Imagem do morango -->
    <ImageView
        android:id="@+id/imageViewMorango"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/textViewAgradecimentos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/ic_check" />

    <!-- Mensagem de endereço -->
    <TextView
        android:id="@+id/textViewEnderecoConfirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewMorango"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="182dp"
        android:text="Seus morangos serão enviados para [endereço]"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Botão para voltar à tela inicial -->
    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Voltar para Início"
        android:backgroundTint="#4CAF50"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
