<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Imagem do produto -->
    <ImageView
        android:id="@+id/ivProduto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp" />

    <!-- Informações do produto -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto A"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrecoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 10,00" />

        <TextView
            android:id="@+id/tvQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade: 1" />

        <TextView
            android:id="@+id/tvPrecoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 10,00" />
    </LinearLayout>

    <!-- Botões de controle (diminuir, aumentar, remover) -->
    <ImageButton
        android:id="@+id/btnDiminuir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_minus" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end">

        <!-- Botão de diminuir -->

        <!-- Botão de aumentar -->

        <!-- Botão de remover -->
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnAumentar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_plus" />

    <ImageButton
        android:id="@+id/btnRemover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_lixeira" />

</LinearLayout>
